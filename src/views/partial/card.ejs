<article class="card-item">
    <a class="card-item__link" href="/shop/item/<%= funko.product_id %>">
        <picture class="card-item__cover">
            <span class="card-item__tag">Nuevo</span>

            <img class="card-item__img--front" src="/img<%= funko.image_front %>"
                alt="Figura coleccionable Funko de <%= funko.product_name %> ">
            <img class="card-item__img--back" src= "/img<%= funko.image_back %>"
                alt="Figura coleccionable Funko de <%= funko.product_name %> en caja ">
        </picture>
        <div class="card-item__content">
            <p class="card-item__licence"> <%= funko.licence_name %></p>
            <h4 class="card-item__name"> <%= funko.product_name  %> </h4>
            <p class="card-item__price"> <%= funko.price %> </p>
            <p class="card-item__promo"> 2 cuotas sin inter√©s </p>
        </div>
    </a>
</article>